{
  "manifest_version": 3,
  "name": "Web Name Highlighter",
  "version": "1.1",
  "description": "Highlight uploaded names and keywords on web pages.",
  "permissions": ["storage", "tabs", "activeTab"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
